{
  "compilerOptions": {
    "jsx": "react-native",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2020",
    "lib": [
      "ES2020"
    ],
    "types": [
      "react-native",
      "node"
    ]
  },
  "include": [
     "app",
     "./app",
     "./app/screens",
     "src",
    "App.tsx",
    "index.tsx"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist"
  ],
  "extends": "expo/tsconfig.base"
}
